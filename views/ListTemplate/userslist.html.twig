{% extends "layout.html.twig" %}

{% block title %}
  Liste des utilisateurs &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <span style="font-size:14px;">
      <a href="adduser"> <i class="fa fa-plus"></i>&nbsp; Ajouter un utilisateur</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="modifuser">&nbsp;&nbsp;&nbsp;<i class="fa fa-pencil-square-o"></i>&nbsp; Modifier un utilisateur</a>
  </span>
{% endblock %}

{% block content %}
 
    <!-- Div pour afficher le nombre d'étudiants total -->
    <div class="row" >
        <div class="col-xs-12">
            <div class="box box-primary">
              {#  <div class="box-header">
                    <div class="box-tools">
                    </div>
                  </div>
              #} 
                        
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr style="background-color: #3c8dbc">
                            <th>
                                <a href=adduser>  <i class="fa fa-pencil-square-o"></i></a>
                            </th>
                            <th class="mytd" >Login</th>
                            <th class="mytd">Nom</th>
                            <th class="mytd">Prénom</th>
                            <th class="mytd">Mot de Passe</th>
                            <th class="mytd">Role</th>
                            <th class="mytd">Status</th>
                            <th class="mytd">Description</th>   
                            <th class="mytd">Adresse mail</th>
                            <th class="mytd">Discipline</th>
                            <th class="mytd">Classes</th>
                        </tr>
                        {% for user in users %}
                        <tr>
                            <td>                               
                                <a href=adduser><i class="fa fa-pencil-square-o"></i>
                                   <input type="hidden" value="{{ user.id_users }}" name="id_users" />
                                </a>
                            </td>
                            <td class="mytd" >{{ user.username }}</td>
                            <td class="mytd" >{{ user.name }}</td>
                            <td class="mytd">{{ user.firstname }}</td>
                            <td class="mytd">{{ user.password }}</td>
                            <td class="mytd">{{ user.role }}</td>
                            <td class="mytd">{{ user.status }}</td>
                            <td class="mytd">{{ user.description }}</td>
                            <td class="mytd">{{ user.user_mail }}</td>
                            <td class="mytd">{{ user.id_discipline }}</td>
                            <td class="mytd">{{ user.id_className }}</td>
    
                        </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}