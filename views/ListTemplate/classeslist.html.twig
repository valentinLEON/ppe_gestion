{% extends "layout.html.twig" %}

{% block title %}
    Liste des classes
{% endblock %}

{% block content %}

    <!-- Div pour afficher le nombre d'étudiants total -->
 
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <a href="addclass"><h3 class="box-title" ><i class="fa fa-plus"></i>&nbsp; Ajouter une classe</h3></a>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Recherche">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr style="background-color: #3c8dbc">
                            <th style="text-align: center; border: 1px solid darkgrey;">Nom de la classe</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Option</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Année</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Nombre d'Etudiants</th>
         
                            <th style="text-align: center; border: 1px solid darkgrey;">Description</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Date de création</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Date de modification</th>
                        </tr>
                        {% for classe in classes %}
                            <tr>
                                <td style="text-align: center; border: 1px solid darkgrey;" >{{ classe.class_name }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ classe.class_option }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ classe.class_year }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ classe.nombreEtudiant }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ classe.description }}</td>
                                <td><input href=""><i class="fa fa-edit"></i></input></td>

                                <td></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}