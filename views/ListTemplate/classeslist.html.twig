{% extends "layout.html.twig" %}

{% block title %}
   Listes des Classes
{% endblock %}

{% block content %}

    <!-- Div pour afficher le nombre d'étudiants total -->

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Liste des classes</h3>

                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Recherche">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                {% for classroom in classes %}
                    <option value="{{ classroom.id_className }}">
                        {{ classroom.class_name }}
                    </option>
                {% endfor %}
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th style="text-align: center">Nom</th>
                            <th style="text-align: center">Année</th>
                            <th style="text-align: center">Option</th>
                            <th style="text-align: center">Description</th>
                        </tr>
                        <tr>
    {% for classroom in classes %}
                            <td value="{{ classroom.id_className }}"> {{ classroom.class_name }}</td>
    {% endfor %}
                            <td>John Doe</td>
                            <td>11-7-2014</td>
                            <td><span class="label label-success">Approved</span></td>
                        </tr>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}