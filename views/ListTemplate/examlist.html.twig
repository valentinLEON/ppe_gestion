{% extends "layout.html.twig" %}

{% block title %}
   Listes des Examens
{% endblock %}

{% block content %}

   <a href="{{ path('notelist') }}"><h3 class="box-title"><i class="fa fa-plus"></i>&nbsp; Ajouter une note</h3></a>


   <div class="box">
      <div class="box-body">
         <table id="example1" class="table table-hover table-striped">
            <thead>
            <tr style="background-color: #3c8dbc">
                <th style="text-align: center; border: 1px solid darkgrey;"><i class="fa fa-calendar"></i>Date</th>
                <th style="text-align: center; border: 1px solid darkgrey;">Examen</th>
                <th style="text-align: center; border: 1px solid darkgrey;">Classe</th>
                <th style="text-align: center; border: 1px solid darkgrey;">Ajouter</th>
            </tr>
            </thead>
             <tbody>
             {% for examen in examens %}
                 <tr>
                     <td style="text-align: center; border: 1px solid darkgrey;">{{ examen.date }}</td>
                     <td style="text-align: center; border: 1px solid darkgrey;">{{ examen.examen_name }}</td>
                     <td style="text-align: center; border: 1px solid darkgrey;">SIO 2</td>
                     <td style="text-align: center; border: 1px solid darkgrey;">
                         
                         <form action="{{ path('note') }}" method="post" >
                             <div class="btn-group">
                                 <button type="submit" class="btn btn-warning btn-flat">
                                     <i class="fa fa-plus">Ajouter des notes</i>
                                     <input type='hidden'>
                                 </button>
                             </div>
                         </form>
                     </td>

                     <td></td>
                 </tr>
             {% endfor %}
         </table>
      </div>
   </div>
 
{% endblock %}