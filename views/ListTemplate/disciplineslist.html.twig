{% extends "layout.html.twig" %}

{% block title %}
{% endblock %}

{% block content %}

    <!-- Div pour afficher le nombre d'étudiants total -->

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Liste des Disciplines</h3>

                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Recherche">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr style="background-color: #3c8dbc">
                            <th style="text-align: center; border: 1px solid darkgrey;">Nom de la Discipline</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Description</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Date de création</th>
                            <th style="text-align: center; border: 1px solid darkgrey;">Date de modification</th>
                        </tr>
                        {% for discipline in disciplines %}
                            <tr>
                                <td style="text-align: center; border: 1px solid darkgrey;" >{{ discipline.name_discipline }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ discipline.desciption }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ discipline.dt-create }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ discipline.dt_update }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}