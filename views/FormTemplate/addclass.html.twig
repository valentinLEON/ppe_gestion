{% extends "layout.html.twig" %}

{% block title %}
    Formulaire d'ajout de classe
{% endblock %}

{% block content %}

    <!-- form start -->
    <form class="form-horizontal">
        <div class="box-body" style="margin-left:2rem; width: 80%; ">
            <div class="form-group" style="width: 15%; display:inline-block;margin:10px;">
                <label>Nom de la classe</label>
                <input type="text" class="form-control" placeholder="Nom...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Description</label>
                <textarea type="text" class="form-control" rows="3" placeholder="Ajouter une description"></textarea>
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Option (si nécessaire)</label>
                <input type="text" class="form-control" placeholder="Ajouter une option...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Année</label>
                <input type="number" class="form-control" placeholder="Ajouter une année...">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right">Ajouter</button>
        </div>
        <!-- /.box-footer -->
    </form>


    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Quick Example</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" style="width: 40%" id="exampleInputEmail1" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Ajouter</button>
            </div>
            <!-- /.box-footer -->

{% endblock %}

