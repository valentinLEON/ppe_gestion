{% extends "layout.html.twig" %}

{% block title %}
    Formulaire d'ajout de classe
{% endblock %}

{% block content %}

    <!-- form start -->
    <form class="form-horizontal">
        <div class="box-body" style="margin-left:2rem; width: 80%; ">
            <div class="form-group" style="width: 15%; display:inline-block;margin:10px;">
                <label>Nom de la classe</label>
                <input type="text" class="form-control" placeholder="Nom...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Description</label>
                <textarea type="text" class="form-control" rows="3" placeholder="Ajouter une description"></textarea>
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Option (si nécessaire)</label>
                <input type="text" class="form-control" placeholder="Ajouter une option...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Année</label>
                <input type="number" class="form-control" placeholder="Ajouter une année...">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right">Ajouter</button>
        </div>
        <!-- /.box-footer -->
    </form>


    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Ajout d'une classe</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="#">Nom de la classe</label>
                    <input type="text" class="form-control" style="width: 60%; border-radius: 3px" id="#" placeholder="Ex : SIO 2">
                </div>
                <div class="form-group">
                    <label for="#">Année scolaire</label>
                    <input type="date" class="form-control" style="width: 60%; border-radius: 3px" id="#" placeholder="2015-2016">
                </div>
                <div class="form-group">
                    <label for="#">Option (facultatif)</label>
                    <input type="date" class="form-control" style="width: 60%; border-radius: 3px" id="#" placeholder="SLAM">
                </div>
                <div class="form-group">
                    <label for="#">Descripion</label>
                    <input type="date" rows="2" class="form-control" style="width: 60%; border-radius: 3px" id="#" placeholder="Ex : Le parcours SLAM du BTS SIO vise à former des developpeurs ....">
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Enregistrer</button>
            </div>
            <!-- /.box-footer -->

{% endblock %}

