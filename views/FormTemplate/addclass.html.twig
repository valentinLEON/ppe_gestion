{% extends "layout.html.twig" %}

{% block title %}
    Formulaire d'ajout de classe
{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Ajout d'une classe</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body pull-center">
                <div class="form-group">
                    <label for="#">Nom de la classe</label>
                    <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="Ex : SIO 2">
                </div>
                <div class="form-group">
                    <label for="#">Année scolaire</label>
                    <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="2015-2016">
                </div>
                <div class="form-group">
                    <label for="#">Option (facultatif)</label>
                    <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="SLAM">
                </div>
                <div class="form-group">
                    <label for="#">Description</label>
                    <input type="textarea" rows="3" class="form-control" style="width: 40%; border-radius: 3px" id="#" placeholder="Ex : Le parcours SLAM du BTS SIO vise à former des developpeurs ....">
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Enregistrer</button>
            </div>
            <!-- /.box-footer -->

{% endblock %}