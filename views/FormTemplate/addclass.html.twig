{% extends "layout.html.twig" %}

{% block title %}
    Ajout d'une classe
{% endblock %}

{% block content %}
    <div class="box box-primary">
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="#">Nom de la classe*</label>
                    <input type="text" class="form-control" style="width: 10%; border-radius: 3px" id="#" placeholder="Ex : SIO 2">
                </div>
                <div class="form-group">
                    <label for="#">Nombre d'étudiant</label>
                    <input type="text" class="form-control" style="width: 10%; border-radius: 3px" id="#" placeholder="Ex : 15">
                </div>
                <div class="form-group">
                    <label for="#">Année scolaire*</label>
                    <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="2015-2016">
                </div>
                <div class="form-group">
                    <label for="#">Option</label>
                    <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="SLAM">
                </div>
                <div class="form-group">
                    <label for="#">Description</label>
                    <textarea class="form-control" rows="3" placeholder="Ex : Le parcours SLAM du BTS SIO vise à former des developpeurs ..." style="width: 40%; border-radius: 3px" id="#"></textarea>
                </div>
                <small>*Champs obligatoire</small>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Enregistrer</button>
            </div>
        </form>
            <!-- /.box-footer -->
    </div>

{% endblock %}