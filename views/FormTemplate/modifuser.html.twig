{% extends "layout.html.twig" %}

{% block title %}
    Formulaire de modification d'un utilisateur
{% endblock %}

{% block content %}
<div class="box box-primary">
    <!-- form start -->
    <form class="form-horizontal" action="{{ path('modifuser') }}"  method="post">
        <div class="box-body" style="margin-left:2rem; width: 90%; ">
            <div class="form-group" style="width: 20%;  display:inline-block; margin:10px;">
                <label>Login  *</label>
                <select name="username" class="form-control">
                     {% for usernames in username %}
                        <option value="{{ usernames.username }}">{{ usernames.username }}</option> 
                        <input type="hidden" value="{{ usernames.id_class }}" name="id_class">
                      {% endfor %}
                </select>
            </div>
             <div class="form-group" style="width: 15%; display:inline-block;margin:10px;">
                <label>Nom</label>
                <input type="text" name="name" class="form-control" value="{{ user_form.name }}">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Pr√©nom</label>
                <input type="text" name="firstname" class="form-control"  value="{{ user_form.firstname }}">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Description</label>
                <input type="text" name="description" class="form-control" placeholder="Description...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
              <label>Role</label>
                <select class="form-control"  name="role" >
                    {% for roles in role %}
                         <option value="{{ roles.role }}">{{ roles.role }}</option> 
                     {% endfor %}
                </select>
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Statuts</label>
                      <select name="status"  class="form-control" >
                    {% for i in 0..5 %}
                         <option value="{{ i }}">{{ i }}</option> 
                     {% endfor %}
                </select>
             </div>
             <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Disciplines</label>
                <select name="discipline" class="form-control" >  
                    {% for disciplines in discipline %}
                         <option value="{{ disciplines.id_discipline }}">{{ disciplines.name_discipline }}</option> 
                     {% endfor %}
                </select>
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Classes</label>
                <select name="id_class" class="form-control">{# multiple #}
                     {% for classes in classe %}
                        <option value="{{ classes.id_class }}">{{ classes.class_name }}</option> 
                      {% endfor %}
                </select>
            </div>
            <div class="form-group" style="width: 20%; display:inline-block;margin:10px;">
                <label>Email  *</label>
                <input type="email"  name="user_mail"  class="form-control" id="inputEmail3" required placeholder="Email...">
            </div>
             <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Mot de passe  *</label>
                <input type="password"  name="password" class="form-control" required placeholder="Min 6 caracteres">
            </div>
             <div class="form-group" style="width: 20%; display:inline-block;margin:10px;">
                <label>Mot de passe  *</label>
                <input type="password" class="form-control" required  placeholder="Min 6 caracteres">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right">Ajouter</button>
        </div>
        <!-- /.box-footer -->
    </form>
</div>                

{% endblock %}

