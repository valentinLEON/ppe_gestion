{% extends "layout.html.twig" %}

{% block title %}
    Formulaire d'ajout d'étudiants
{% endblock %}

{% block content %}

    <!-- form start -->
    <form class="form-horizontal">
        <div class="box-body" style="margin-left:2rem; width: 80%; ">
            <div class="form-group" style="width: 15%; display:inline-block;margin:10px;">
                <label>Nom</label>
                <input type="text" class="form-control" placeholder="Nom...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Prénom</label>
                <input type="text" class="form-control" placeholder="Prénom...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Date de Naissance</label>
                <input type="date" class="form-control" placeholder="Date de Naissance...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Adresse</label>
                <textarea type="text" class="form-control" rows="2" placeholder="Adresse..."></textarea>
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Email</label>
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email...">
            </div>
            <div class="form-group" style="width: 20%;  display:inline-block;margin:10px;">
                <label>Téléphone</label>
                <input type="tel" class="form-control" placeholder="Téléphone...">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right">Ajouter</button>
        </div>
        <!-- /.box-footer -->
    </form>

<div class="box box-primary">
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form">
        <div class="box-body">
            <div class="form-group">
                <label for="#">Nom</label>
                <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="Ex : Jean-Michel">
            </div>
            <div class="form-group">
                <label for="#">Prénom</label>
                <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="Ex : Dupont">
            </div>
            <div class="form-group">
                <label for="#">Date de naissance</label>
                <input type="date" class="form-control" style="width: 20%; border-radius: 3px" id="#">
            </div>
            <div class="form-group">
                <label for="#">Adresse mail</label>
                <input type="text" class="form-control" style="width: 20%; border-radius: 3px" id="#" placeholder="Ex : jeanmichou@gmail.com">
            </div>
            <div class="form-group">
                <label for="#">N° de téléphone</label>
                <input type="text" class="form-control" style="width: 30%; border-radius: 3px" id="#" placeholder="Ex : 06 54 46 54 39">
            </div>
            <div class="form-group">
                <label for="#">Adresse</label>
                <input type="text" class="form-control" placeholder="Ex : 234, route des pins / Nice / 06200, France" style="width: 40%; border-radius: 3px" id="#"></input>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right">Enregistrer</button>
        </div>
    </form>
