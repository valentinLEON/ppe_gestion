{% extends "layout.html.twig" %}

{% block title %}
    Formulaire d'ajout de note
{% endblock %}

{% block content %}

    <!-- form start -->


<div class="box box-primary">
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post" action="{{ path('note') }}">

        <div class="box-body" style="margin-left:20px;  ">
            <div class="form-group" style=" display:inline-block; margin:10px; width: 110px; ">
                <label for="sel1">Note</label>
                <input type="text" class="form-control" name="note" placeholder="Ex : 12/20"/>
            </div>

            <div class="form-group" style="margin-left:20px;  border-radius: 3px;  ">
                
                <label for="sel1">Etudiant</label>
                <select class="form-control" id="sel2" name="etudiant" style="min-width:250px; max-width:500px; ">
                    {% for etudiant in student %}
                        <option value="{{ etudiant.id_student }}">{{ etudiant.student_name~' '~etudiant.student_firstname }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group" style="margin-left:20px; border-radius: 3px;"  >
                <label for="sel1">Mati√®re</label>
                <select class="form-control" id="sel3" name="matiere" style="min-width:250px; max-width:500px;">
                    {% for matiere in matieres %}
                        <option value="{{ matiere.id_discipline }}">{{ matiere.name_discipline }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form_group">
                <button type="submit" class="btn btn-info pull-right">Ajouter</button>
            </div>
        </div>
        {# submit avec input si possible #}

        <!-- /.box-body -->
        <!-- mettre le submit ici -->
        <!-- /.box-footer -->
    </form>

    </div>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Autres</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
     
                        
                        
                        
                    <form class="form-horizontal" method="post" action="{{ path('judgement') }}">

                       <div class="box-body" style="margin-left:20px; width: 80px;  min-width:50px;  ">

                           <textarea name="judgement"></textarea>

                           <div class="form_group">
                               <button type="submit" class="btn btn-info pull-right">Ajouter</button>
                           </div>

                         </div>   

                    </form>                  

                        
      
                        
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



{% endblock %}

