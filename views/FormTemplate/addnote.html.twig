{% extends "layout.html.twig" %}

{% block title %}
    Formulaire d'ajout de note
{% endblock %}

{% block content %}

    <!-- form start -->


    <!-- /.box-header -->
    <!-- form start -->

<div class="box box-primary">   
    <!-- Main content -->
    <form class="form-horizontal" method="post" action="{{ path('note') }}" style="margin-left:20px">

              <div class="box-body">
                    <div class="form-group">
                      <label for="#">Note</label>
                      <input style="border-radius: 3px; width: 15%" type="text" class="form-control" name="note" placeholder="Ex : 13"/>
                    </div>

                    <div class="form-group">
                        <label for="#">Coefficient</label>
                        <input style="border-radius: 3px; width: 15%" type="text" class="form-control" name="coeff" placeholder="Ex : 1"/>
                    </div>

                    <div class="form-group">
                      <label for="#">Etudiant</label>
                      <select class="form-control" id="sel2" name="etudiant" style="border-radius: 3px; width: 30%">
                          {% for etudiant in student %}
                              <option value="{{ etudiant.id_student }}">{{ etudiant.student_name~' '~etudiant.student_firstname }}</option>
                          {% endfor %}
                      </select>
                    </div>

                    <div class="form-group">
                      <label for="#">Matière</label>
                      <select class="form-control" id="sel3" name="matiere"  style="border-radius: 3px; width: 31%">
                          {% for matiere in matieres %}
                              <option value="{{ matiere.id_discipline }}">{{ matiere.name_discipline }}</option>
                          {% endfor %}
                      </select>
                    </div>

                    <div class="form-group">
                        <label for="#">Observations</label>
                        <textarea  class="form-control" rows="3" style="width: 30%; border-radius: 3px" name="judgement" placeholder="Ex : Bon travail, travaillez mieux la méthode vue en cours ..."></textarea>
                    </div>
                    <div class="form_group">
                      <button type="submit" class="btn btn-info pull-right">Ajouter</button>
                    </div>
                  {% for success in app.session.getFlashBag.get('success') %}
                      <div class="alert alert-success">
                          {{ success }}
                      </div>
                  {% endfor %}
              </div>
    </form>
        <!-- /.row -->
</div>
    <!-- /.content-wrapper -->



{% endblock %}

