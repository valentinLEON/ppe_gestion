<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ClassroomManager</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/themes/AdminLTE/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/themes/AdminLTE/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/themes/AdminLTE/plugins/select2/select2.min.css">
    <!-- fullCalendar 2.2.5-->
    <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/themes/AdminLTE/plugins/fullcalendar/fullcalendar.min.css">
    <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/themes/AdminLTE/plugins/fullcalendar/fullcalendar.print.css" media="print">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/themes/AdminLTE/dist/css/skins/_all-skins.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|__________________________________________________________|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|_________________________________________________________|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|_________________________________________________________|
-->
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="/" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>C</b>Mng</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Classroom</b>Manager</span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <!-- The user image in the navbar-->
                            <!--<img src="../vendor/adminlte/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">-->
                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                            <span class="hidden-xs">Compte</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                <!--<img src="../vendor/adminlte/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">-->

                                <p>
                                    Maurice Dupont <br> Professeur de Mathématiques
                                </p>
                            </li>
                            <!-- Menu Body -->

                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="#" class="btn btn-default btn-flat">Profil</a>
                                </div>
                                <div class="pull-right">
                                    <a href="#" class="btn btn-default btn-flat">Déconnexion</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    <li>
                        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <a href="/"><img src="{{ app.request.getBaseURL() }}/themes/AdminLTE/dist/img/avatar5.png" class="img-circle" style="width:70px; height:70px;" alt="User Image"></a>
                </div>
                <div class="pull-left info">
                    <p style="margin-left:15px;">Maurice Dupont</p>

                </div>
            </div>

            <!-- search form (Optional) -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Recherche...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                </button>
              </span>
                </div>
            </form>
            <!-- /.search form -->

            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                <li class="header">TABLEAU DE BORD</li>
                <!-- Optionally, you can add icons to the links -->
                <li class="active"><a href="/"><i class="fa fa-home"></i> <span>Accueil</span></a></li>
                <li><a href="calendar"><i class="fa fa-calendar"></i> <span>Calendrier</span></a></li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-university"></i><span>Classes</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="#">Liste des classes</a></li>
                        <li><a href="addclass"><i class="fa fa-plus"></i>Ajouter une classe</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-mortar-board"></i><span>Etudiants</span> <i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="#">Liste des étudiants</a></li>
                        <li><a href="addstudent"><i class="fa fa-user-plus"></i>Ajouter un étudiant</a></li>
                        <li><a href="#">Statistiques</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-sticky-note-o"></i><span>Notes</span><i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="addnote"><i class="fa fa-plus"></i>Ajouter des notes</a></li>
                        <li><a href="#">Statistiques</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-users"></i><span>Gestion Absence</span><i class="fa fa-angle-left pull-right"></i></a>
                    {#<ul class="treeview-menu">
                        <li><a href="#"><i class="fa fa-user-plus"></i>Ajouter un professeur</a></li>
                        <li><a href="#">Liste des professeurs</a></li>
                    </ul>#}
                </li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-wrench"></i><span>Administration</span><i class="fa fa-angle-left pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="adduser"><i class="fa fa-user-plus"></i>Ajouter un utilisateur</a></li>
                        <li><a href="#">Liste des utilisateurs</a></li>
                        <li><a href="adddiscipline"><i class="fa fa-plus"></i>Ajouter des matières</a></li>
                    </ul>
                </li>
                <!--<li><a href="#"><i class="fa fa-ambulance"></i> <span>Examens</span></a></li>-->
            </ul>
            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                {% block title %}Titre de la page{% endblock %}
                <small>{% block titledescription %}Description de la page{% endblock %}</small>
            </h1>
            <!-- <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol> -->
        </section>

        <!-- Main content -->
        <section class="content">
            {% block content %}Contenu de la page{% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->

        <!-- Default to the left -->
        <strong>Mentions légales &copy; 2016 <a href="#">UFIP</a>.</strong> Tous droits réservés.
    </footer>


</div>
<!-- ./wrapper -->


<!-- REQUIRED JS SCRIPTS -->

<!-- jQuery 2.1.4 -->
<script src="{{ app.request.getBaseURL() }}/themes/AdminLTE/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<!-- Bootstrap 3.3.5 -->
<script src="{{ app.request.getBaseURL() }}/themes/AdminLTE/plugins/bootstrap/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
<script src="{{ app.request.getBaseURL() }}/themes/AdminLTE/dist/js/app.min.js"></script>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. Slimscroll is required when using the
     fixed layout. -->
</body>
</html>
